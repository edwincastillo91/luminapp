<h1>Listing chapters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
		  <td><%= link_to 'Show', univers_chapter_path(@univers.id, chapter.id) %></td>
		  <td><%= link_to 'Edit', edit_univers_chapter_path(@univers.id, chapter.id) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

