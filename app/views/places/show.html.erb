<%- model_class = Place -%>


<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @place.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:latitude) %></dt>
      <dd><pre class="prettyprint"><%= @place.latitude %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:longitude) %></dt>
      <dd><pre class="prettyprint"><%= @place.longitude %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
univers_places_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_univers_place_path(@univers.id,@place), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
univers_place_path(@univers.id,@place),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<ul>
<% @place.events.each do |event|%>

	<li>
<b><%= event.name %> </b>
		| <b><% if event.day %><%= event.day.human_day%>  <%else%> <%=  link_to "no date", edit_univers_event_path(@univers.id, event.id) %> <%end%></b>
		| <b>character here </b>
</li>

<%end%>
</ul>
