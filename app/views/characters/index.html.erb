<%= link_to "Add a Character", new_univers_character_path%>
	<div class="place-grid">
	
		<% @characters.each do |char| %>
	
	
		<div class="card col2" data-category="">
		<div class="top-box">
			<b class="name">
				<%= link_to char.first_name + " " + char.last_name, univers_character_path(@univers.id, char), class:'card_title' %>
				 </b>
		
		<div class="middle-box">
			
		</div>
	
		<div class="bottom-box">
			
			<%= link_to "remove", univers_character_path(@univers.id,char), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs' %>
            
          
		
		
		</div>
	
	</div>
	
	
  </div>    
    <% end %>
  
	
	
	
</div>



