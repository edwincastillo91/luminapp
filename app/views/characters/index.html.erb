<h1>Listing characters</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Drive</th>
      <th>Wound</th>
      <th>Eyes color</th>
      <th>Hair color</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Race</th>
      <th>Sex</th>
      <th>Genetic modification</th>
      <th>Social class</th>
      <th>Sexual orientation</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.first_name %></td>
        <td><%= character.last_name %></td>
        <td><%= character.drive %></td>
        <td><%= character.wound %></td>
        <td><%= character.eyes_color %></td>
        <td><%= character.hair_color %></td>
        <td><%= character.height %></td>
        <td><%= character.weight %></td>
        <td><%= character.race %></td>
        <td><%= character.sex %></td>
        <td><%= character.genetic_modification %></td>
        <td><%= character.social_class %></td>
        <td><%= character.sexual_orientation %></td>
        <td><%= character.genre %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

