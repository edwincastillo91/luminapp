<%- model_class = Event -%>
<div class="page-header">
  
 
  <h1><%= "Calender" %></h1>
  <h2><%=t '.title', :default => Event %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
		<th><%= model_class.human_attribute_name(:day_id) %></th>
		<th><%= model_class.human_attribute_name(:place_id) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.name %></td>
		   <td>
			   <% if event.day%>
			  <%= event.day.date.strftime("%A %B %d, %Y")%>
		  <%end%>
		  </td>
		   
		  <td><% if event.place%><%= event.place.name%><%end%></td>
		  
		  
		 
		  
        
        <td>
			<%= link_to univers_event_path(@univers.id, event), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
			<%= link_to univers_event_path(@univers.id, event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_univers_event_path,
            :class => 'btn btn-primary' %>
